{
  "name": "frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --project main",
    "watch-lib": "ng build library --watch",
    "build": "ng build gn-api-client && ng build gn4-api-client && ng build library && ng build --project=main",
    "watch": "ng build --watch --configuration development",
    "download-api-geonetwork4-client": "curl -H 'Accept: application/json' http://localhost:8080/geonetwork/srv/api/doc -o projects/gn4-api-client/openapi.json",
    "build-api-geonetwork4-client": "openapi-generator-cli generate -i projects/gn4-api-client/openapi.json  -g typescript-angular -o  projects/gn4-api-client/src/lib  --skip-validate-spec  --additional-properties=apiModulePrefix=Gn4",
    "download-api-geonetwork-client": "curl http://localhost:7979/v3/api-docs -o projects/gn-api-client/openapi.json",
    "build-api-geonetwork-client": "openapi-generator-cli generate -i projects/gn-api-client/openapi.json  -g typescript-angular -o  projects/gn-api-client/src/lib  --skip-validate-spec --additional-properties=apiModulePrefix=Gn",
    "prettier": "prettier --write \"**/*.{ts,html,scss,css,json}\"",
    "test": "ng test"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20",
    "@ng-icons/core": "^32.2.0",
    "@ng-icons/font-awesome": "^32.2.0",
    "@ngrx/operators": "^20.0.1",
    "@ngrx/signals": "^20.0.1",
    "@ngrx/store": "^20.0.1",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "@primeuix/themes": "^1.2.5",
    "@tailwindcss/postcss": "^4.1.13",
    "postcss": "^8.5.3",
    "primeng": "^20.2.0",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.13",
    "tailwindcss-primeui": "^0.6.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20",
    "@angular/build": "^20.3.2",
    "@angular/cli": "^20.3.1",
    "@angular/compiler-cli": "^20.3.0",
    "@openapitools/openapi-generator-cli": "^2.23.4",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.3.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2"
  }
}
