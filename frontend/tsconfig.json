/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "paths": {
      "gn-api-client": [
        "./dist/gn-api-client"
      ],
      "gn4-api-client": [
        "./dist/gn4-api-client"
      ],
      "modules": [
        "./dist/modules"
      ],
      "shared": [
        "./dist/shared"
      ]
    },
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./projects/main/tsconfig.app.json"
    },
    {
      "path": "./projects/main/tsconfig.spec.json"
    },
    {
      "path": "./projects/modules/tsconfig.lib.json"
    },
    {
      "path": "./projects/modules/tsconfig.spec.json"
    },
    {
      "path": "./projects/shared/tsconfig.lib.json"
    },
    {
      "path": "./projects/shared/tsconfig.spec.json"
    },
    {
      "path": "./projects/gn4-api-client/tsconfig.lib.json"
    },
    {
      "path": "./projects/gn4-api-client/tsconfig.spec.json"
    },
    {
      "path": "./projects/gn-api-client/tsconfig.lib.json"
    },
    {
      "path": "./projects/gn-api-client/tsconfig.spec.json"
    }
  ]
}
